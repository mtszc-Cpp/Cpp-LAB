//TU ZROBIONE  NA TABLICY I Z SORTOWANIEM BĄBELKOWYM
#include <iostream>
#include <cstdlib>

using namespace std;

void sortowanie(int tab[],int N);

int main(){
    int N = 2;
    int tab1[N];
    int liczba1 = 0;
    int liczba2 = 0;
    cout << "Podaj Pierwsza liczbe: ";
    cin >>liczba1;
    cout << "Podaj Pierwsza liczbe: ";
    cin >>liczba2;
    tab1[0] = liczba1;
    tab1[1] = liczba2;
    sortowanie(tab1, N);
    cout<<tab1[0]<<", "<<tab1[1];
    return 0;
}

void sortowanie(int tab[], int N){
	for(int i=0;i<N;i++){
		for(int j=1;j<N-i;j++){
            if(tab[j]>tab[j-1]){
                int bufor;
                bufor = tab[j-1];
                tab[j-1] =tab[j];
                tab[j]=bufor;
            }
        }
    }
}

/*
void sortowanie(int tablica[], int N){
	for(int i=0;i<N;i++){
		for(int j=1;j<N-i;j++){
            if(tablica[j-1]>tablica[j]){
                swap(tablica[j-1], tablica[j]);
            }
        }
    }
}

